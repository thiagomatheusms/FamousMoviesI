<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!-- Personal Styles -->

    <style name="styleLabelInfo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="styleValuesInfo">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd" tools:targetApi="jelly_bean_mr1">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="styleView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:background">@color/colorGrayMedium</item>
        <item name="android:elevation" tools:targetApi="lollipop">3dp</item>
    </style>

    <style name="styleLabelSection">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginStart" tools:targetApi="jelly_bean_mr1">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

</resources>
